pipeline {
    agent any

    stages {
        stage('Test') {
            steps {
                sh '''
                    echo 'Stage Test'
                    if [ -e build/index.html ]
                    then 
                        echo "exist"
                    else 
                        echo "not exist"
                    fi
                    echo 'Start running test'
                    npm ci
                    npm run build
                    npm test
                '''
            }
        }
    }
}